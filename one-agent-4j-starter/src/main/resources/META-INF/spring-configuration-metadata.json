{
  "groups": [
    {
      "name": "one-agent",
      "type": "com.all.in.one.agent.common.config.AgentProperties",
      "sourceType": "com.all.in.one.agent.common.config.AgentProperties",
      "description": "One Agent 配置属性"
    }
  ],
  "properties": [
    {
      "name": "one-agent.enabled",
      "type": "java.lang.Boolean",
      "description": "是否启用 One Agent",
      "defaultValue": true
    },
    {
      "name": "one-agent.app-name",
      "type": "java.lang.String",
      "description": "应用名称"
    },
    {
      "name": "one-agent.environment",
      "type": "java.lang.String",
      "description": "环境: dev/test/uat/prod"
    },
    {
      "name": "one-agent.sampling-rate",
      "type": "java.lang.Double",
      "description": "采样率 (0.0-1.0)",
      "defaultValue": 1.0
    },
    {
      "name": "one-agent.server-url",
      "type": "java.lang.String",
      "description": "上报服务器地址"
    },
    {
      "name": "one-agent.report-strategy.mode",
      "type": "java.lang.String",
      "description": "上报模式: sync/async/batch",
      "defaultValue": "async"
    },
    {
      "name": "one-agent.capture-config.enable-filter",
      "type": "java.lang.Boolean",
      "description": "是否启用 Filter 捕获",
      "defaultValue": true
    },
    {
      "name": "one-agent.capture-config.enable-controller-advice",
      "type": "java.lang.Boolean",
      "description": "是否启用 ControllerAdvice 捕获",
      "defaultValue": true
    },
    {
      "name": "one-agent.capture-config.enable-aop",
      "type": "java.lang.Boolean",
      "description": "是否启用 AOP 捕获",
      "defaultValue": true
    }
  ]
}
